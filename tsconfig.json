{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "plugins": [
      {"name": "typescript-plugin-css-modules"}
    ],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
